{
  "name": "web-header",
  "version": "2.0.6",
  "description": "Bootstrap, template and assets to display Istex galaxy header.",
  "private": true,
  "scripts": {
    "prettier": "prettier --write src/*.js src/*.css",
    "webpack": "webpack -p --config webpack.config.js",
    "build": "npm run prettier && npm run webpack",
    "watch": "webpack-dev-server -d",
    "insertversion:js": "cross-var sed -i \"s#\\(version \\)\\([\\.a-z0-9]\\+\\)#\\1$npm_package_version#g\" src/header.js",
    "version": "npm run insertversion:js && git add src/header.js",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "nanoajax": "^0.4.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/istex/istex-web-header"
  },
  "keywords": [
    "Istex",
    "header"
  ],
  "author": "Istex API",
  "license": "MIT",
  "devDependencies": {
    "copy-webpack-plugin": "^4.5.1",
    "cross-var": "^1.1.0",
    "css-loader": "^0.28.11",
    "html-loader": "^0.5.5",
    "prettier": "^1.12.1",
    "style-loader": "^0.21.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.4"
  }
}
