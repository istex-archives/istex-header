{
  "name": "web-header",
  "version": "1.0.0",
  "description": "Bootstrap, template and assets to display Istex galaxy header.",
  "main": "main.js",
  "scripts": {
    "start": "npm-run-all --parallel less-watcher web-static",
    "web-static": "./node_modules/node-static/bin/cli.js -H '{\"Access-Control-Allow-Origin\":\"*\"}'",
    "less-watcher": "node ./lib/scripts/watch.js",
    "postinstall": "node ./lib/npm/postInstall.js",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "async": "^2.4.0",
    "bootstrap": "^3.3.7",
    "chokidar": "^1.7.0",
    "font-awesome": "^4.7.0",
    "fs-extra": "^3.0.0",
    "less": "^2.4.0",
    "less-plugin-clean-css": "^1.5.0",
    "node-static": "^0.7.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/istex/istex-web-header"
  },
  "keywords": [
    "Istex",
    "header"
  ],
  "author": "Istex API",
  "license": "MIT",
  "lint-staged": {
    "*.{js,less,html}": [
      "prettier --write *.js less/*.less public/views/*.html",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.7.4"
  }
}
